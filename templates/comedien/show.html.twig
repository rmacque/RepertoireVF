{% extends 'base.html.twig' %}

{% block title %}Comédien{% endblock %}

{% block body %}
    <h1>Comédien</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ comedien.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ comedien.prenom }}</td>
            </tr>
            <tr>
                <th>Directeur Artistique</th>
                <td>{{ comedien.DA ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img 
                {% if comedien.photo is empty  %}
                  src=""
                {% else %}
                  src="{{ comedien.photo }}"
                {% endif %}
                ></td>
            </tr>
        </tbody>
    </table>

    {#{ dump(roles) }#}

    <table>
        <tbody>
        {#% for role in roles %}
            <tr>
                <td>{{ role.nom }}</td>
                <td>{{ role.oeuvre.nom }}</td>
            </tr>
        {% else %}
        {% endfor %#}
        </tbody>
    </table>
    <a href="{{ path('comedien_index') }}">Retour à la liste</a>

    <a href="{{ path('comedien_edit', {'id': comedien.id}) }}">Editer</a>

    {{ include('comedien/_delete_form.html.twig') }}
{% endblock %}
